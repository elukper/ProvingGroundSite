<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="getDefaultArtist" class="com.example.music.discs.RockArtist">
	<constructor-arg index = "0" value = "Severina"/>
	<constructor-arg index = "1" ref = "getDefaultTrack"/>
</bean>

<bean id="getDefaultTrack" class="com.example.music.discs.RockTrack">
	<constructor-arg value = "Moja Stikla"/>
</bean>
</beans>